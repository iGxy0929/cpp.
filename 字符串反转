#include<stdio.h>
int main()
{
	
	int n=0;
	int i=0;
	int j=0;
	printf("请输入字符的个数:\n");
	scanf("%d",&n);
	getchar();
	char a[n];
	printf("请输入一串字符:\n");
	gets(a);
	printf("\n顺序输出：");
	for(i=0;i<n;i++)
	{
		printf("%c",a[i]);
	}
	printf("\n逆序输出：");
	for(j=n;j>=0;j--)
	{
		printf("%c",a[j]);
		}
	
	
	return 0;
}
