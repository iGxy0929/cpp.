#include<stdio.h>
int main()
{
	int n = 0;
	int a[n];
	int max = -99999;
	int min = a[0];
	int b = 0;
	printf("请输入整数的个数：\n");
	scanf_s("%d", &n);
	for (int i = 0; i < n; i++)
	{
		printf("a[%d]=", i);
		scanf_s("%d", &a[i]);
		if (max < a[i])
			{
				max = a[i];
		

			}
			if (min > a[i])
			{
				min = a[i];
			
			}
			
	}
		printf("max=%d", max);
					printf("min=%d", min);
				b = max - min;
				printf("极差为：%d", b);
		

	return 0;
}
