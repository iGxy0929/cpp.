#include<stdio.h>
int main()
{
	int n;
	int k;
	float a, max;
	max = 0;
	printf("请输入数字的个数：");
	scanf_s("%d", &n);
	printf("请输入%d个数字", n);
	for(k=0;k<n;k++)
{
		scanf_s("%f", &a);
		if (a > max)
			max = a;
	}
	printf("最大值为：%f", max);
	

	return 0;
}
#include<stdio.h>
int main()
{	
	int n=0;
	int a[n];
	printf("请输入整数的个数：");
	scanf("%d",&n);
	printf("请输入%d个整数",n);
	for(int i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
		
	}
	int max=a[0];
	for(int j=0;j<n;j++)
	{
		if(a[j]>max)
		max=a[j];
	}
	printf("最大值为%d",max);
	
	return 0;
} 
